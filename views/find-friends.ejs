<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Find Friends - Shukuma</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-lightning-charge-fill"></i> SHUKUMA</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/social"><i class="bi bi-arrow-left"></i> Back to Social</a></li>
          <li class="nav-item"><span class="nav-link"><i class="bi bi-person-circle"></i> <%= typeof user !== 'undefined' ? user.username : '' %></span></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout"><i class="bi bi-box-arrow-right"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <div class="text-center mb-5">
      <div style="font-size: 6rem; filter: drop-shadow(0 0 40px rgba(255, 107, 53, 0.5)); margin-bottom: 1.5rem;">üîç</div>
      <h1 class="display-3 fw-bold text-gradient mb-3">Find Friends</h1>
      <p class="text-secondary fs-4">Search for users to connect with</p>
    </div>

    <!-- Search Form -->
    <div class="card p-4 mb-5">
      <form method="GET" action="/social/find-friends">
        <div class="input-group input-group-lg">
          <input 
            type="text" 
            class="form-control" 
            name="query" 
            value="<%= query %>"
            placeholder="Search by username or email..." 
            required>
          <button class="btn btn-primary px-4" type="submit">
            <i class="bi bi-search"></i> Search
          </button>
        </div>
      </form>
    </div>

    <!-- Search Results -->
    <div class="card p-4">
      <h4 class="mb-4 text-gradient"><i class="bi bi-people"></i> Search Results</h4>
      
      <% if (query && users.length === 0) { %>
        <div class="text-center py-5">
          <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">üîç</div>
          <p class="text-muted">No users found matching "<%= query %>"</p>
        </div>
      <% } else if (!query) { %>
        <div class="text-center py-5">
          <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">üëÜ</div>
          <p class="text-muted">Enter a username or email to search</p>
        </div>
      <% } else { %>
        <div class="row g-3">
          <% users.forEach(searchUser => { %>
            <div class="col-md-6">
              <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <strong class="fs-5"><%= searchUser.username %></strong>
                    <br>
                    <small class="text-secondary">
                      <i class="bi bi-fire"></i> <%= searchUser.streakCount %> day streak
                    </small>
                  </div>
                  <form method="POST" action="/social/friend-request/<%= searchUser._id %>">
                    <button type="submit" class="btn btn-primary">
                      <i class="bi bi-person-plus"></i> Add
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <footer class="text-center py-5 mt-5">
    <div class="container">
      <p class="text-secondary mb-2"><i class="bi bi-lightning-charge-fill text-gradient"></i> &copy; 2024 Shukuma</p>
      <p class="text-muted small">Made with ‚ù§Ô∏è by Yanga Ngcayisa</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>