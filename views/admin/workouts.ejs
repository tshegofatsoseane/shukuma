<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Shukuma</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="bi bi-lightning-charge-fill"></i> SHUKUMA</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/workouts"><i class="bi bi-gear"></i> Admin</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout"><i class="bi bi-box-arrow-right"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <div class="text-center mb-5">
      <div style="font-size: 6rem; filter: drop-shadow(0 0 40px rgba(255, 107, 53, 0.5)); margin-bottom: 1.5rem;">‚öôÔ∏è</div>
      <h1 class="display-3 fw-bold text-gradient mb-3">Admin Panel</h1>
      <p class="text-secondary fs-4">Manage workout cards</p>
    </div>

    <!-- Add New Workout Form -->
    <div class="card p-5 mb-5">
      <h3 class="mb-4 text-gradient"><i class="bi bi-plus-circle"></i> Add New Workout</h3>

      <form method="POST" action="/admin/workouts">
        <div class="row g-4">
          <div class="col-md-6">
            <label for="name" class="form-label fw-semibold">Workout Name</label>
            <input 
              type="text" 
              class="form-control form-control-lg" 
              id="name" 
              name="name" 
              required
              placeholder="e.g., Push-ups">
          </div>

          <div class="col-md-6">
            <label for="category" class="form-label fw-semibold">Category</label>
            <select class="form-select form-select-lg" id="category" name="category" required>
              <option value="strength">üí™ Strength</option>
              <option value="cardio">‚ù§Ô∏è Cardio</option>
              <option value="flexibility">üßò Flexibility</option>
              <option value="balance">‚öñÔ∏è Balance</option>
            </select>
          </div>

          <div class="col-12">
            <label for="description" class="form-label fw-semibold">Description</label>
            <textarea 
              class="form-control form-control-lg" 
              id="description" 
              name="description" 
              rows="4" 
              required
              placeholder="Detailed instructions for the workout..."></textarea>
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-lg px-5">
              <i class="bi bi-plus-lg"></i> Add Workout
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Existing Workouts -->
    <div class="card p-5">
      <h3 class="mb-4 text-gradient"><i class="bi bi-list-ul"></i> All Workouts (<%= workouts.length %>)</h3>

      <% if (workouts.length === 0) { %>
        <div class="text-center py-5">
          <div style="font-size: 5rem; opacity: 0.3; margin-bottom: 1.5rem;">üìã</div>
          <p class="text-muted fs-5">No workouts yet. Add your first one above!</p>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th style="width: 25%;">Name</th>
                <th style="width: 15%;">Category</th>
                <th style="width: 45%;">Description</th>
                <th style="width: 15%;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% workouts.forEach(workout => { %>
                <tr>
                  <td><strong><%= workout.name %></strong></td>
                  <td>
                    <span class="badge <%= 
                      workout.category === 'strength' ? 'bg-danger' :
                      workout.category === 'cardio' ? 'bg-warning' :
                      workout.category === 'flexibility' ? 'bg-success' : 'bg-info'
                    %>">
                      <%= workout.category %>
                    </span>
                  </td>
                  <td class="text-secondary"><%= workout.description.substring(0, 80) %>...</td>
                  <td>
                    <button 
                      class="btn btn-sm btn-outline-primary mb-1" 
                      data-bs-toggle="modal" 
                      data-bs-target="#editModal<%= workout._id %>">
                      <i class="bi bi-pencil"></i>
                    </button>

                    <form method="POST" action="/admin/workouts/<%= workout._id %>?_method=DELETE" class="d-inline">
                      <button 
                        type="submit" 
                        class="btn btn-sm btn-outline-danger mb-1"
                        onclick="return confirm('Delete this workout?')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>

                <!-- Edit Modal -->
                <div class="modal fade" id="editModal<%= workout._id %>" tabindex="-1">
                  <div class="modal-dialog modal-lg">
                    <div class="modal-content" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(20px); border: 1px solid rgba(255, 107, 53, 0.2);">
                      <div class="modal-header" style="border-bottom: 1px solid rgba(255, 107, 53, 0.1);">
                        <h5 class="modal-title text-gradient">Edit Workout</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                      </div>
                      <form method="POST" action="/admin/workouts/<%= workout._id %>/edit">
                        <div class="modal-body">
                          <div class="mb-3">
                            <label class="form-label fw-semibold">Workout Name</label>
                            <input 
                              type="text" 
                              class="form-control form-control-lg" 
                              name="name" 
                              value="<%= workout.name %>" 
                              required>
                          </div>

                          <div class="mb-3">
                            <label class="form-label fw-semibold">Category</label>
                            <select class="form-select form-select-lg" name="category" required>
                              <option value="strength" <%= workout.category === 'strength' ? 'selected' : '' %>>üí™ Strength</option>
                              <option value="cardio" <%= workout.category === 'cardio' ? 'selected' : '' %>>‚ù§Ô∏è Cardio</option>
                              <option value="flexibility" <%= workout.category === 'flexibility' ? 'selected' : '' %>>üßò Flexibility</option>
                              <option value="balance" <%= workout.category === 'balance' ? 'selected' : '' %>>‚öñÔ∏è Balance</option>
                            </select>
                          </div>

                          <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea 
                              class="form-control form-control-lg" 
                              name="description" 
                              rows="5" 
                              required><%= workout.description %></textarea>
                          </div>
                        </div>
                        <div class="modal-footer" style="border-top: 1px solid rgba(255, 107, 53, 0.1);">
                          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                          <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <footer class="text-center py-5 mt-5">
    <div class="container">
      <p class="text-secondary mb-2"><i class="bi bi-lightning-charge-fill text-gradient"></i> &copy; 2024 Shukuma</p>
      <p class="text-muted small">Made with ‚ù§Ô∏è by Yanga Ngcayisa</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>