<%- include('partials/header', { title: "Challenges", user }) %>

    <!-- mainpage -->


  <div class="container my-5">

    <div class="text-center mb-5">

      <h1 class="display-3 fw-bold text-gradient mb-3">Challenges</h1>
      <p class="text-secondary fs-4">Push yourself, compete, and have fun while doing it.</p>
    </div>

        <div class="row g-4">

            <!-- daily chllange -->
            <div class="col-md-6">
                <div class="card challenge-card p-4 h-100">


            
                    <h5><span class="challenge-badge daily">Daily Challenge</span></h5>


                    <% if (dailyCard) { %>



                    <h4 class="mt-2"><%= dailyCard.name %></h4>
                    <p class="text-muted"><%= dailyCard.description %></p>

                    <% if (dailyCompleted) { %>


                    <div class="alert alert-success py-2">

                        <i class="bi bi-check-circle-fill"></i> Done for today!
                    </div>
                    <% } else { %>


                    <!-- refactor alater -->
                    <form action="/workouts/complete/<%= dailyCard._id %>" method="POST">

                        <input type="hidden" name="challengeType" value="daily" />

                        <button class="btn btn-warning w-100">

                            <i class="bi bi-check-circle"></i> Mark As Completed
                        </button>


                    </form>

                    <% } %>

                    <% } else { %>

                    <p class="text-muted">No daily challenge assigned yet.</p>
                    <% } %>

                </div>
            </div>


            <!-- streaks -->
            <div class="col-md-6">
                <div class="card challenge-card p-4 h-100 d-flex justify-content-between">

                    <div>
                        <h5><span class="challenge-badge streak">Streak Challenge</span></h5>

                        <p class="text-muted">Your current streak:</p>

                        <h2 class="text-danger" style="font-weight:800;"><%= streak %> Days</h2>




                        <small class="text-muted">Consistency really builds momentum.</small>
                    </div>

                </div>


            </div>


            <!-- monthly leadrboard -->

            <div class="col-12">
                <div class="card challenge-card p-4">

                    <h5><i class="bi bi-bar-chart"></i> Leaderboard</h5>

                    <p class="text-muted">Top performers for this month</p>

                    <% if (!leaderboard || leaderboard.length === 0) { %>




                    <p class="text-center text-muted">No entries yet. Be the first to get on the board!</p>
                    <% } else { %>

                    <% leaderboard.forEach((entry, rankIndex) => { %>
                    <div class="leaderboard-item">

                        <!-- Yes, I'll probably prettify this later -->

                        <div class="leaderboard-rank

                          <%= rankIndex === 0 ? 'gold' : rankIndex === 1 ? 'silver' : rankIndex === 2 ? 'bronze' : '' %>">
                            #<%= rankIndex + 1 %>


                        </div>

                        <strong><%= entry._id.username %></strong>

                        <span class="badge bg-primary"><%= entry.count %> workouts</span>
                    </div>
                    <% }) %>

                    <% } %>

                </div>
            </div>


            <!-- timed chalange -->
            <div class="col-md-6">



                <div class="card challenge-card p-4 h-100 d-flex justify-content-between align-items-center">
                    <div>




                        <h5><i class="bi bi-stopwatch"></i> Timer Challenge</h5>


                        <p class="text-muted">Try completing as many cards as you can in 2 minutes.</p>
                    </div>

                    <a href="/challenges/timed" class="btn btn-danger">

                        <i class="bi bi-stopwatch"></i> Start
                    </a>
                </div>
            </div>


            <!-- yeam challange -->
            <div class="col-md-6">

                <div class="card challenge-card p-4 h-100 d-flex justify-content-between align-items-center">
                    <div>
                        <h5><span class="challenge-badge team">Team Challenge</span></h5>

                        <p class="text-muted">Join a team and complete challenges together.</p>


                    </div>

                    <a href="/challenges/teams" class="btn btn-info">
                        <i class="bi bi-people-fill"></i> View Teams
                    </a>
                </div>


            </div>



        </div>
    </div>
 

<%- include('partials/footer') %>

