<%- include('partials/header', { title: "Teams", user }) %>

  <div class="container my-5">
    <div class="text-center mb-5">
      <div style="font-size: 6rem; filter: drop-shadow(0 0 40px rgba(255, 159, 102, 0.5)); margin-bottom: 1.5rem;">ğŸ‘¥</div>
      <h1 class="display-3 fw-bold text-gradient mb-3">Team Challenges</h1>
      <p class="text-secondary fs-4">Join forces and compete together!</p>
    </div>

    <!-- User's Team Status -->
    <% if (!userTeam) { %>
      <!-- No Team Yet -->
      <div class="row g-4 mb-5">
        <div class="col-md-6">
          <div class="card h-100 p-5">
            <div class="text-center mb-4">
              <div style="font-size: 5rem; filter: drop-shadow(0 0 30px rgba(255, 107, 53, 0.4));">â•</div>
            </div>
            <h3 class="text-center mb-3 text-gradient">Create a Team</h3>
            <p class="text-secondary text-center mb-4">Start your own team and invite others to join!</p>

            <form method="POST" action="/challenges/teams/create">
              <div class="mb-4">
                <label for="teamName" class="form-label fw-semibold">Team Name</label>
                <input 
                  type="text" 
                  class="form-control form-control-lg" 
                  id="teamName" 
                  name="teamName" 
                  required
                  placeholder="Enter team name">
              </div>
              <button type="submit" class="btn btn-primary w-100 btn-lg">
                <i class="bi bi-plus-lg"></i> Create Team
              </button>
            </form>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card h-100 p-5">
            <div class="text-center mb-4">
              <div style="font-size: 5rem; filter: drop-shadow(0 0 30px rgba(255, 159, 102, 0.4));">ğŸ”‘</div>
            </div>
            <h3 class="text-center mb-3 text-gradient">Join a Team</h3>
            <p class="text-secondary text-center mb-4">Have a team code? Join an existing team!</p>

            <form method="POST" action="/challenges/teams/join">
              <div class="mb-4">
                <label for="teamCode" class="form-label fw-semibold">Team Code</label>
                <input 
                  type="text" 
                  class="form-control form-control-lg text-uppercase" 
                  id="teamCode" 
                  name="teamCode" 
                  required
                  placeholder="Enter 6-digit code"
                  maxlength="6"
                  style="text-align: center; font-size: 1.5rem; letter-spacing: 0.3em;">
              </div>
              <button type="submit" class="btn btn-info w-100 btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Join Team
              </button>
            </form>
          </div>
        </div>
      </div>
    <% } else { %>
      <!-- User Has a Team -->
      <div class="card p-5 mb-5">
        <div class="row align-items-center mb-4">
          <div class="col-md-8">
            <div class="d-flex align-items-center gap-3 mb-3">
              <div style="font-size: 4rem; filter: drop-shadow(0 0 30px rgba(255, 159, 102, 0.4));">ğŸ‘¥</div>
              <div>
                <h3 class="mb-1 text-gradient"><%= userTeam.name %></h3>
                <p class="text-secondary mb-0">Your team's collective progress</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 text-end">
            <div class="card p-3 mb-3" style="background: linear-gradient(135deg, rgba(255, 245, 237, 0.8) 0%, rgba(255, 255, 255, 0.8) 100%); border: 2px solid rgba(255, 107, 53, 0.2);">
              <div class="text-muted small mb-1">Team Code</div>
              <div class="display-6 fw-bold text-gradient" style="letter-spacing: 0.2em;"><%= userTeam.teamCode %></div>
              <small class="text-muted">Share with friends!</small>
            </div>
            
            <!-- Leave Team Button -->
            <form method="POST" action="/challenges/teams/leave" onsubmit="return confirm('Are you sure you want to leave this team?')">
              <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                <i class="bi bi-box-arrow-left"></i> Leave Team
              </button>
            </form>
          </div>
        </div>

        <div class="row g-4 mb-4">
          <div class="col-md-6">
            <div class="stat-card">
              <div style="font-size: 4rem; filter: drop-shadow(0 0 30px rgba(255, 179, 71, 0.5)); margin-bottom: 1rem;">ğŸ†</div>
              <div class="stat-value"><%= teamScore %></div>
              <div class="stat-label">Team Score</div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="stat-card">
              <div style="font-size: 4rem; filter: drop-shadow(0 0 30px rgba(255, 159, 102, 0.5)); margin-bottom: 1rem;">ğŸ‘¥</div>
              <div class="stat-value"><%= teamMembers.length %></div>
              <div class="stat-label">Team Members</div>
            </div>
          </div>
        </div>

        <!-- Team Members List -->
        <div class="mt-4">
          <h5 class="mb-3 text-gradient"><i class="bi bi-people"></i> Team Members:</h5>
          <div class="row g-3">
            <% teamMembers.forEach(member => { %>
              <div class="col-md-6">
                <div class="card p-3">
                  <div class="d-flex align-items-center">
                    <i class="bi bi-person-circle me-2" style="font-size: 2rem; color: var(--primary);"></i>
                    <strong><%= member.username %></strong>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Team Leaderboard -->
    <div class="card p-5">
      <h3 class="mb-4 text-gradient"><i class="bi bi-bar-chart"></i> Team Leaderboard</h3>
      <p class="text-secondary mb-4">Top performing teams</p>

      <% if (teamLeaderboard.length === 0) { %>
        <div class="text-center py-5">
          <div style="font-size: 5rem; opacity: 0.3; margin-bottom: 1.5rem;">ğŸ†</div>
          <p class="text-muted fs-5">No teams yet. Be the first to create one!</p>
        </div>
      <% } else { %>
        <% teamLeaderboard.forEach((entry, index) => { %>
          <div class="leaderboard-item">
            <div class="leaderboard-rank <%= 
              index === 0 ? 'gold' : 
              index === 1 ? 'silver' : 
              index === 2 ? 'bronze' : '' 
            %>">
              #<%= index + 1 %>
            </div>
            <div class="flex-grow-1">
              <strong class="fs-5"><%= entry.team.name %></strong>
              <br>
              <small class="text-secondary">
                <i class="bi bi-people"></i> <%= entry.team.members.length %> members
              </small>
            </div>
            <div>
              <span class="badge bg-info" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
                <%= entry.score %> workouts
              </span>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

<%- include('partials/footer') %>