<%- include('partials/header', { title: "timed-challenges", user }) %>

  <div class="container my-5">
    <div class="text-center mb-5">
      <h1 class="display-3 fw-bold text-gradient mb-3">Time Challenge</h1>
      <p class="text-secondary fs-4">Complete as many cards as possible in 2 minutes!</p>
    </div>

    <!-- Challenge Area -->
    <div class="text-center">
      <div id="startBtn">
        <button onclick="startTimedChallenge()" class="btn btn-danger btn-lg px-5 py-4" style="font-size: 1.5rem;">
          <i class="bi bi-stopwatch"></i> Start Challenge
        </button>
      </div>

      <div id="challengeArea" class="d-none">
        <!-- Timer -->
        <div class="timer-display">2:00</div>
        
        <!-- Score -->
        <div class="mb-5">
          <h3 class="text-secondary">Cards Completed: <span id="currentScore" class="text-gradient display-4 fw-bold">0</span></h3>
        </div>

        <!-- Current Card -->
        <div class="workout-card-display mb-4">
          <h2 id="timedCardName">Loading...</h2>
          <p id="timedCardDesc" class="lead"></p>
          <button onclick="completeTimedCard()" class="btn btn-success btn-lg px-5 mt-4">
            <i class="bi bi-check-circle"></i> Done! Next Card
          </button>
        </div>
      </div>
    </div>

    <!-- Tips -->
    <div class="card p-4 mt-5">
      <h4 class="mb-3 text-gradient"><i class="bi bi-lightbulb"></i> Pro Tips</h4>
      <ul class="text-secondary mb-0">
        <li class="mb-2">Don't sacrifice form for speed - quality reps count!</li>
        <li class="mb-2">Take a deep breath between cards</li>
        <li class="mb-2">Focus on completing the movement correctly</li>
        <li class="mb-2">Challenge yourself but listen to your body</li>
      </ul>
    </div>
  </div>

<%- include('partials/footer') %>