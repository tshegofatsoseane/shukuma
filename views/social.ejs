<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social - Shukuma</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand" href="/">
        <img 
          src="/assets/newshukumalogo.png" 
          alt="Shukuma Logo"
          style="width: 45px; height: auto; filter: drop-shadow(0 10px 30px rgba(255,107,53,0.4));">
        SHUKUMA
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/workouts/shuffle"><i class="bi bi-shuffle"></i> Shuffle</a></li>
          <li class="nav-item"><a class="nav-link" href="/progress"><i class="bi bi-graph-up"></i> Progress</a></li>
          <li class="nav-item"><a class="nav-link" href="/challenges"><i class="bi bi-trophy"></i> Challenges</a></li>
          <li class="nav-item"><a class="nav-link" href="/challenges/teams"><i class="bi bi-people"></i> Teams</a></li>
          <li class="nav-item"><a class="nav-link" href="/social"><i class="bi bi-person-arms-up"></i> Social</a></li>
          <li class="nav-item"><span class="nav-link"><i class="bi bi-person-circle"></i> <%= typeof user !== 'undefined' ? user.username : '' %></span></li>
          <li class="nav-item"><a class="nav-link" href="/auth/logout"><i class="bi bi-box-arrow-right"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <div class="text-center mb-5">
      <div style="font-size: 6rem; filter: drop-shadow(0 0 40px rgba(255, 107, 53, 0.5)); margin-bottom: 1.5rem;">‚ù§Ô∏è</div>
      <h1 class="display-3 fw-bold text-gradient mb-3">Social Hub</h1>
      <p class="text-secondary fs-4">Connect, compete, and celebrate with friends!</p>
      <a href="/social/find-friends" class="btn btn-primary btn-lg mt-3">
        <i class="bi bi-person-plus"></i> Find Friends
      </a>
    </div>

    <div class="row g-4 mb-5">
      <!-- Friend Requests -->
      <% if (friendRequests.length > 0) { %>
        <div class="col-12">
          <div class="card p-4">
            <h4 class="mb-4 text-gradient"><i class="bi bi-person-add"></i> Friend Requests</h4>
            <% friendRequests.forEach(request => { %>
              <div class="d-flex justify-content-between align-items-center mb-3 p-3 border rounded">
                <div>
                  <strong class="fs-5"><%= request.from.username %></strong>
                  <br>
                  <small class="text-muted">Sent <%= new Date(request.createdAt).toLocaleDateString() %></small>
                </div>
                <div class="d-flex gap-2">
                  <form method="POST" action="/social/accept-friend/<%= request.from._id %>">
                    <button type="submit" class="btn btn-success btn-sm">
                      <i class="bi bi-check-lg"></i> Accept
                    </button>
                  </form>
                  <form method="POST" action="/social/decline-friend/<%= request.from._id %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                      <i class="bi bi-x-lg"></i> Decline
                    </button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Workout Assignments -->
      <% if (assignments.length > 0) { %>
        <div class="col-12">
          <div class="card p-4">
            <h4 class="mb-4 text-gradient"><i class="bi bi-gift"></i> Workout Assignments</h4>
            <% assignments.forEach(assignment => { %>
              <div class="card p-3 mb-3" style="border-left: 4px solid var(--primary);">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <strong class="fs-5"><%= assignment.from.username %></strong> assigned you:
                    <h5 class="text-gradient mt-2"><%= assignment.workoutId.name %></h5>
                    <p class="text-secondary mb-2"><%= assignment.workoutId.description %></p>
                    <% if (assignment.message) { %>
                      <p class="fst-italic text-muted mb-0">"<%= assignment.message %>"</p>
                    <% } %>
                  </div>
                  <div class="d-flex flex-column gap-2">
                    <form method="POST" action="/social/complete-assignment/<%= assignment._id %>">
                      <button type="submit" class="btn btn-success btn-sm">
                        <i class="bi bi-check-circle"></i> Complete
                      </button>
                    </form>
                    <form method="POST" action="/social/decline-assignment/<%= assignment._id %>">
                      <button type="submit" class="btn btn-outline-secondary btn-sm">
                        Pass
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Friends List -->
    <div class="row g-4 mb-5">
      <div class="col-12">
        <div class="card p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 text-gradient"><i class="bi bi-people"></i> Friends (<%= friends.length %>)</h4>
            <% if (friends.length > 0) { %>
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#assignWorkoutModal">
                <i class="bi bi-send"></i> Assign Workout
              </button>
            <% } %>
          </div>
          
          <% if (friends.length === 0) { %>
            <div class="text-center py-5">
              <div style="font-size: 5rem; opacity: 0.3; margin-bottom: 1.5rem;">üë•</div>
              <p class="text-muted fs-5 mb-4">No friends yet. Start connecting!</p>
              <a href="/social/find-friends" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Find Friends
              </a>
            </div>
          <% } else { %>
            <div class="row g-3">
              <% friends.forEach(friend => { %>
                <div class="col-md-6">
                  <div class="card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong class="fs-5"><%= friend.username %></strong>
                        <br>
                        <small class="text-secondary">
                          <i class="bi bi-fire"></i> <%= friend.streakCount %> day streak
                        </small>
                      </div>
                      <form method="POST" action="/social/remove-friend/<%= friend._id %>" onsubmit="return confirm('Remove friend?')">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                          <i class="bi bi-person-x"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Friend Activity Feed -->
    <div class="card p-4">
      <h4 class="mb-4 text-gradient"><i class="bi bi-activity"></i> Friend Activity</h4>
      
      <% if (recentActivity.length === 0) { %>
        <div class="text-center py-5">
          <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">üìä</div>
          <p class="text-muted">No recent activity from friends</p>
        </div>
      <% } else { %>
        <% recentActivity.forEach(activity => { %>
          <div class="card p-3 mb-3" style="background: rgba(255, 245, 237, 0.5);">
            <div class="d-flex justify-content-between align-items-start">
              <div class="flex-grow-1">
                <strong class="text-primary"><%= activity.userId.username %></strong> completed
                <strong><%= activity.workoutId.name %></strong>
                <br>
                <small class="text-muted">
                  <%= new Date(activity.completedAt).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                </small>
                
                <!-- Cheers Section -->
                <div class="mt-2">
                  <% if (activity.cheers && activity.cheers.length > 0) { %>
                    <div class="d-flex gap-1 align-items-center">
                      <% activity.cheers.slice(0, 5).forEach(cheer => { %>
                        <span title="<%= cheer.userId ? cheer.userId.username : 'Anonymous' %>"><%= cheer.emoji %></span>
                      <% }) %>
                      <% if (activity.cheers.length > 5) { %>
                        <small class="text-muted">+<%= activity.cheers.length - 5 %> more</small>
                      <% } %>
                    </div>
                  <% } %>
                  
                  <!-- Cheer Buttons -->
                  <div class="d-flex gap-2 mt-2">
                    <% 
                      const cheered = activity.cheers && activity.cheers.some(c => 
                        c.userId && c.userId._id && c.userId._id.toString() === user.userId.toString()
                      ); 
                    %>
                    <% if (!cheered) { %>
                      <button onclick="addCheer('<%= activity._id %>', 'üí™')" class="btn btn-sm btn-outline-primary">üí™</button>
                      <button onclick="addCheer('<%= activity._id %>', 'üî•')" class="btn btn-sm btn-outline-primary">üî•</button>
                      <button onclick="addCheer('<%= activity._id %>', 'üëè')" class="btn btn-sm btn-outline-primary">üëè</button>
                      <button onclick="addCheer('<%= activity._id %>', 'üéâ')" class="btn btn-sm btn-outline-primary">üéâ</button>
                    <% } else { %>
                      <small class="text-muted">You cheered for this!</small>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Assign Workout Modal -->
  <% if (friends.length > 0) { %>
    <div class="modal fade" id="assignWorkoutModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(20px);">
          <div class="modal-header">
            <h5 class="modal-title text-gradient">Assign Workout to Friend</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form method="POST" action="/social/assign-workout">
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label fw-semibold">Select Friend</label>
                <select class="form-select" name="friendId" required>
                  <option value="">Choose a friend...</option>
                  <% friends.forEach(friend => { %>
                    <option value="<%= friend._id %>"><%= friend.username %></option>
                  <% }) %>
                </select>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-semibold">Select Workout</label>
                <div id="workoutSelector">
                  <button type="button" class="btn btn-primary w-100" onclick="loadWorkouts()">
                    <i class="bi bi-shuffle"></i> Load Workouts
                  </button>
                </div>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-semibold">Message (Optional)</label>
                <textarea class="form-control" name="message" rows="3" maxlength="200" placeholder="Add a motivational message..."></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Assign Workout
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>

  <footer class="text-center py-5 mt-5">
    <div class="container">
      <p class="text-secondary mb-2"><i class="bi bi-lightning-charge-fill text-gradient"></i> &copy; 2024 Shukuma</p>
      <p class="text-muted small">Made with ‚ù§Ô∏è by Yanga Ngcayisa</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    async function addCheer(progressId, emoji) {
      try {
        const response = await fetch(`/social/cheer/${progressId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ emoji })
        });
        
        if (response.ok) {
          location.reload();
        }
      } catch (err) {
        console.error('Error adding cheer:', err);
      }
    }
    
    async function loadWorkouts() {
      try {
        const response = await fetch('/workouts/random');
        const workout = await response.json();
        
        document.getElementById('workoutSelector').innerHTML = `
          <input type="hidden" name="workoutId" value="${workout._id}">
          <div class="card p-3" style="border: 2px solid var(--primary);">
            <h5 class="text-gradient">${workout.name}</h5>
            <p class="text-secondary mb-0">${workout.description}</p>
            <span class="badge bg-primary mt-2">${workout.category}</span>
          </div>
          <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="loadWorkouts()">
            <i class="bi bi-shuffle"></i> Pick Different Workout
          </button>
        `;
      } catch (err) {
        console.error('Error loading workouts:', err);
      }
    }
  </script>
</body>
</html>

