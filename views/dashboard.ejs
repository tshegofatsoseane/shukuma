<%- include('partials/header', { title: "Dashboard", user }) %>

<div class="container my-5">

  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-gradient mb-2">Welcome back, <%= user.username %>!</h1>
    <p class="text-secondary fs-5">Let's keep that momentum going!</p>
  </div>

  <!-- Stats Cards -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="stat-card">
        <div class="stat-value"><%= streak %></div>
        <div class="stat-label">Day Streak</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="stat-card">
        <div class="stat-value"><%= totalWorkouts %></div>
        <div class="stat-label">Total Workouts</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="stat-card">
        <div class="stat-value"><%= completedToday %></div>
        <div class="stat-label">Completed Today</div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row g-4 mb-5">
    <div class="col-md-6">
      <div class="card h-100 p-5 text-center">
        <h3 class="mb-3 text-gradient">Shuffle Workout</h3>
        <p class="text-secondary mb-4">Get a random exercise card and start moving!</p>
        <a href="/workouts/shuffle" class="btn btn-primary btn-lg mt-auto">
          <i class="bi bi-shuffle"></i> Shuffle Now
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card h-100 p-5 text-center">
        <h3 class="mb-3 text-gradient">Challenges</h3>
        <p class="text-secondary mb-4">Take on daily challenges and compete with others!</p>
        <a href="/challenges" class="btn btn-warning btn-lg mt-auto">
          <i class="bi bi-trophy"></i> View Challenges
        </a>
      </div>
    </div>
  </div>

  <!-- Additional Links -->
  <div class="row g-4">
    <div class="col-md-6">
      <div class="card p-4">
        <h5 class="mb-2">Your Progress</h5>
        <p class="text-secondary mb-3">Keep track of your fitness journey</p>
        <a href="/progress" class="btn btn-outline-primary">
          <i class="bi bi-bar-chart"></i> View Full Progress
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card p-4">
        <h5 class="mb-2">Team Up</h5>
        <p class="text-secondary mb-3">Join or create a team for group challenges</p>
        <a href="/challenges/teams" class="btn btn-outline-info">
          <i class="bi bi-people-fill"></i> Explore Teams
        </a>
      </div>
    </div>
  </div>

</div>

<%- include('partials/footer') %>
